.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), "bidders"
      %li=link_to pat(:new), "bidders/new"
  .content
    %h2.title Bidders
    .inner
      %table.table
        %tr
          %th.first=mat(:bidder, :number)
          %th=mat(:bidder, :first_name)
          %th=mat(:bidder, :last_name)
          %th.last="&nbsp;"
        -@auction.bidders.each do |bidder|
          %tr{:onClick => "document.location=\'\'"}
            %td.first=bidder.number
            %td=bidder.first_name
            %td=bidder.last_name
            %td.last
              =button_to pat(:edit), url(:bidders, :edit, :id => "#{bidder.id}", :auctions_id => "#{@auction.id}"), :method => :get, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"