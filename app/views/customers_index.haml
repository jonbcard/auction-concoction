    #title
      %h2 Customers
    #title-menu
      %button#new{:href => "#new", :'data-bind' => "click : newCustomer, icon: 'ui-icon-plus'"}
        New
    .inner
      %table.table
        %tr
          %th.first=mat(:customer, :first_name)
          %th=mat(:customer, :last_name)
          %th=mat(:customer, :email)
          %th Bidder #
          %th.last="&nbsp;"
        %tbody{:'data-bind' => "template: {name:'row', foreach: customers()}"}
      .actions-bar.wat-cf
        .actions
          %span{:'data-bind' => 'text: displayCount'}